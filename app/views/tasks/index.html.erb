<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Minhas Tarefas</h1>
  <%= link_to "Nova tarefa", new_task_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition" %>
</div>

<% if @tasks.any? %>
  <div class="bg-white shadow-sm rounded-lg overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Título / URL</th>
          <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Criada em</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Ações</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @tasks.each do |task| %>
          <tr class="hover:bg-gray-50 transition">
            <td class="px-6 py-4">
              <div class="text-sm font-medium text-gray-900"><%= task.title.presence || "Anúncio" %></div>
              <div class="text-sm text-gray-500 truncate max-w-md"><%= truncate(task.url, length: 60) %></div>
            </td>
            <td class="px-6 py-4 text-center">
              <% status_classes = { "pending" => "bg-yellow-100 text-yellow-800", "processing" => "bg-blue-100 text-blue-800", "completed" => "bg-green-100 text-green-800", "failed" => "bg-red-100 text-red-800" } %>
              <span class="inline-flex px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_classes[task.status] %>">
                <%= task.status_label %>
              </span>
            </td>
            <td class="px-6 py-4 text-center text-sm text-gray-500">
              <%= task.created_at.strftime("%d/%m/%Y %H:%M") %>
            </td>
            <td class="px-6 py-4 text-right text-sm space-x-2">
              <%= link_to "Ver", task, class: "text-indigo-600 hover:text-indigo-900 font-medium" %>
              <%= button_to "Excluir", task, method: :delete, data: { turbo_confirm: "Excluir esta tarefa?" }, class: "text-red-600 hover:text-red-900 font-medium", form: { class: "inline" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="text-center py-12 bg-white rounded-lg shadow-sm">
    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
    </svg>
    <h3 class="mt-2 text-sm font-medium text-gray-900">Nenhuma tarefa</h3>
    <p class="mt-1 text-sm text-gray-500">Comece criando sua primeira tarefa de scraping.</p>
    <div class="mt-6">
      <%= link_to "Criar primeira tarefa", new_task_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition" %>
    </div>
  </div>
<% end %>
