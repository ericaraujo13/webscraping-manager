<div class="mb-6">
  <%= link_to "← Voltar", tasks_path, class: "text-gray-600 hover:text-gray-900 text-sm" %>
</div>

<div class="bg-white shadow-sm rounded-lg overflow-hidden">
  <div class="px-6 py-5 border-b border-gray-200">
    <div class="flex items-center justify-between">
      <h1 class="text-xl font-semibold text-gray-900">Tarefa #<%= @task.id %></h1>
      <% status_classes = { "pending" => "bg-yellow-100 text-yellow-800", "processing" => "bg-blue-100 text-blue-800", "completed" => "bg-green-100 text-green-800", "failed" => "bg-red-100 text-red-800" } %>
      <span class="inline-flex px-3 py-1 rounded-full text-sm font-medium <%= status_classes[@task.status] %>">
        <%= @task.status_label %>
      </span>
    </div>
  </div>

  <div class="px-6 py-5 space-y-4">
    <% if @task.title.present? %>
      <div>
        <dt class="text-sm font-medium text-gray-500">Título</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @task.title %></dd>
      </div>
    <% end %>

    <% if @task.description.present? %>
      <div>
        <dt class="text-sm font-medium text-gray-500">Descrição</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @task.description %></dd>
      </div>
    <% end %>

    <div>
      <dt class="text-sm font-medium text-gray-500">URL</dt>
      <dd class="mt-1 text-sm text-indigo-600 hover:text-indigo-800 break-all">
        <%= link_to @task.url, @task.url, target: "_blank" %>
      </dd>
    </div>

    <div class="grid grid-cols-2 gap-4 pt-4 border-t border-gray-100">
      <div>
        <dt class="text-sm font-medium text-gray-500">Criada em</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @task.created_at.strftime("%d/%m/%Y %H:%M") %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Atualizada em</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @task.updated_at.strftime("%d/%m/%Y %H:%M") %></dd>
      </div>
      <% if @task.completed_at %>
        <div>
          <dt class="text-sm font-medium text-gray-500">Concluída em</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @task.completed_at.strftime("%d/%m/%Y %H:%M") %></dd>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% if @task.completed? && @task.result.present? %>
  <div class="mt-6 bg-white shadow-sm rounded-lg overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200 bg-green-50">
      <h2 class="text-lg font-medium text-green-800">Resultado da coleta</h2>
    </div>
    <div class="px-6 py-5">
      <% r = @task.result.is_a?(Hash) ? @task.result : {} %>
      <dl class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        <div class="bg-gray-50 p-4 rounded-lg">
          <dt class="text-sm font-medium text-gray-500">Marca</dt>
          <dd class="mt-1 text-lg font-semibold text-gray-900"><%= r["marca"] || r[:marca] || "-" %></dd>
        </div>
        <div class="bg-gray-50 p-4 rounded-lg">
          <dt class="text-sm font-medium text-gray-500">Modelo</dt>
          <dd class="mt-1 text-lg font-semibold text-gray-900"><%= r["modelo"] || r[:modelo] || "-" %></dd>
        </div>
        <div class="bg-gray-50 p-4 rounded-lg">
          <dt class="text-sm font-medium text-gray-500">Preço</dt>
          <dd class="mt-1 text-lg font-semibold text-green-600"><%= number_to_currency(r["preco"] || r[:preco], unit: "R$ ") %></dd>
        </div>
        <% km = r["km"] || r[:km] %>
        <% if km.present? %>
          <div class="bg-gray-50 p-4 rounded-lg">
            <dt class="text-sm font-medium text-gray-500">Quilometragem</dt>
            <dd class="mt-1 text-lg font-semibold text-gray-900"><%= number_with_delimiter(km) %> km</dd>
          </div>
        <% end %>
      </dl>
    </div>
  </div>
<% end %>

<% if @task.failed? && @task.error_message.present? %>
  <div class="mt-6 bg-red-50 border border-red-200 rounded-lg p-4">
    <div class="flex">
      <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
      </svg>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-red-800">Erro ao processar</h3>
        <p class="mt-1 text-sm text-red-700"><%= @task.error_message %></p>
      </div>
    </div>
  </div>
<% end %>
