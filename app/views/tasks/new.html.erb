<div class="mb-6">
  <%= link_to "← Voltar", tasks_path, class: "text-gray-600 hover:text-gray-900 text-sm" %>
</div>

<div class="max-w-2xl">
  <div class="bg-white shadow-sm rounded-lg overflow-hidden">
    <div class="px-6 py-5 border-b border-gray-200">
      <h1 class="text-xl font-semibold text-gray-900">Nova Tarefa de Scraping</h1>
      <p class="mt-1 text-sm text-gray-500">Informe a URL de um anúncio individual da Webmotors.</p>
    </div>

    <div class="px-6 py-5">
      <div class="mb-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
        <p class="text-sm text-blue-800">
          Use o link que abre ao <strong>clicar em um carro</strong> na busca<br>
          <code class="text-xs bg-blue-100 px-1 py-0.5 rounded">.../comprar/bmw/x2/.../12345</code>
        </p>
        <p class="mt-2 text-sm text-blue-700">
          Não use a página de listagem/busca<br>
          <code class="text-xs bg-blue-100 px-1 py-0.5 rounded">.../carros/sp/bmw/x2?...</code>
        </p>
      </div>

      <%= form_with model: @task, url: tasks_path, local: true do |f| %>
        <% if @task.errors.any? %>
          <div class="mb-6 bg-red-50 border border-red-200 rounded-lg p-4">
            <ul class="list-disc list-inside text-sm text-red-700 space-y-1">
              <% @task.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="space-y-5">
          <div>
            <%= f.label :title, "Título (opcional)", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :title, placeholder: "Ex: BMW X2 2025", class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm px-4 py-2.5 border" %>
          </div>

          <div>
            <%= f.label :description, "Descrição (opcional)", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_area :description, rows: 2, class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm px-4 py-2.5 border" %>
          </div>

          <div>
            <%= f.label :url, "URL do anúncio (Webmotors) *", class: "block text-sm font-medium text-gray-700" %>
            <%= f.url_field :url, required: true, placeholder: "https://www.webmotors.com.br/comprar/...", class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-sm px-4 py-2.5 border" %>
          </div>

          <div class="pt-4">
            <%= f.submit "Criar tarefa", class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2.5 rounded-lg text-sm font-medium transition cursor-pointer" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
